{
  "name": "file-based-test-management-service",
  "version": "1.0.0",
  "description": "A file system-based test management solution that allows flexible storage of test collateral in any format while providing easy discovery, reporting, and aggregation capabilities.",
  "main": "src/server/app.js",
  "scripts": {
    "start": "node src/server/app.js",
    "dev": "nodemon src/server/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "build:desktop": "node scripts/build-desktop.js",
    "build:server": "node scripts/build-server.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "test-management",
    "file-based",
    "testing",
    "manifest",
    "electron",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "electron": "^27.1.3",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "electron": {
