{
  "$id": "https://filebasedtestmanager.com/schemas/test-session-schema.json",
  "title": "Test Session Schema",
  "description": "Schema for defining test sessions within charters",
  "type": "object",
  "required": ["id", "projectId", "charterId", "date", "executor"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^session-\\d+$",
      "description": "Unique session identifier"
    },
    "projectId": {
      "type": "string",
      "pattern": "^proj-\\d+$",
      "description": "Reference to the project"
    },
    "charterId": {
      "type": "string",
      "pattern": "^charter-\\d+$",
      "description": "Reference to the test charter"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Session date in YYYY-MM-DD format"
    },
    "startTime": {
      "type": "string",
      "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$",
      "description": "Session start time in HH:MM:SS format"
    },
    "endTime": {
      "type": "string",
      "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]$",
      "description": "Session end time in HH:MM:SS format"
    },
    "duration": {
      "type": "integer",
      "minimum": 0,
      "description": "Session duration in minutes"
    },
    "executor": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Person executing the session"
    },
    "productRevision": {
      "type": "string",
      "pattern": "^v?\\d+(\\.\\d+)*([-.]\\w+)?$",
      "description": "Product version/revision being tested"
    },
    "environment": {
      "type": "string",
      "maxLength": 200,
      "description": "Test environment used"
    },
    "notes": {
      "type": "string",
      "maxLength": 2000,
      "description": "Session notes"
    },
    "status": {
      "type": "string",
      "enum": ["planned", "in-progress", "completed", "cancelled"],
      "default": "planned",
      "description": "Session status"
    },
    "testCasesExecuted": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^case-\\d+$"
      },
      "description": "Test cases executed in this session"
    },
    "bugsFound": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of bugs found"
    },
    "issuesRaised": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Issues raised during the session"
    },
    "build": {
      "type": "string",
      "description": "Build or version of the software tested"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional metadata for the test session"
    }
  },
  "additionalProperties": false
}
