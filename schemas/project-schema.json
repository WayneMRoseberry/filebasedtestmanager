{
  "$id": "https://filebasedtestmanager.com/schemas/project-schema.json",
  "title": "Project Schema",
  "description": "Schema for defining test projects with area hierarchies",
  "type": "object",
  "required": ["id", "name", "startDate", "areaHierarchy"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^proj-\\d+$",
      "description": "Unique project identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Project name"
    },
    "startDate": {
      "type": "string",
      "format": "date",
      "description": "Project start date in YYYY-MM-DD format"
    },
    "areaHierarchy": {
      "type": "object",
      "description": "Hierarchical breakdown of project features",
      "patternProperties": {
        "^[a-zA-Z0-9\\s\\-_]+$": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9\\s\\-_]+$": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "description": {
      "type": ["string", "null"],
      "maxLength": 1000,
      "description": "Project description"
    },
    "status": {
      "type": ["string", "null"],
      "anyOf": [
        { "enum": ["active", "archived", "on-hold"] },
        { "type": "null" }
      ],
      "description": "Current status of the project"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "description": "Version of the project (semver)"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional metadata for the project"
    },
    "endDate": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Project end date in YYYY-MM-DD format"
    },
    "team": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Team members working on the project"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Project tags for categorization"
    }
  },
  "additionalProperties": false
}
