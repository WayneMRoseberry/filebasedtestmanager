{
  "$id": "https://filebasedtestmanager.com/schemas/project-schema.json",
  "title": "Project Schema",
  "description": "Schema for defining test projects with area hierarchies",
  "type": "object",
  "required": ["id", "name", "startDate", "areaHierarchy"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^proj-\\d+$",
      "description": "Unique project identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Project name"
    },
    "startDate": {
      "type": "string",
      "format": "date",
      "description": "Project start date in YYYY-MM-DD format"
    },
    "areaHierarchy": {
      "type": "object",
      "description": "Hierarchical breakdown of project features",
      "patternProperties": {
        "^[a-zA-Z0-9\\s\\-_]+$": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9\\s\\-_]+$": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Project description"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "completed", "cancelled"],
      "default": "active",
      "description": "Project status"
    },
    "endDate": {
      "type": "string",
      "format": "date",
      "description": "Project end date in YYYY-MM-DD format"
    },
    "team": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Team members working on the project"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Project tags for categorization"
    }
  },
  "additionalProperties": false
}
