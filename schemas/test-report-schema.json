{
  "$id": "https://filebasedtestmanager.com/schemas/test-report-schema.json",
  "title": "Test Report Schema",
  "description": "Schema for defining test session reports",
  "type": "object",
  "required": ["id", "projectId", "title", "summary"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^report-\\d+$",
      "description": "Unique report identifier"
    },
    "projectId": {
      "type": "string",
      "pattern": "^proj-\\d+$",
      "description": "Reference to the project"
    },
    "sessionId": {
      "type": "string",
      "pattern": "^session-\\d+$",
      "description": "Reference to the test session"
    },
    "charterId": {
      "type": "string",
      "pattern": "^charter-\\d+$",
      "description": "Reference to the test charter"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Report title"
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000,
      "description": "Report summary"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "severity", "status"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "status": {
            "type": "string",
            "enum": ["open", "closed", "reopened", "deferred", "investigating"]
          },
          "bugId": {
            "type": "string",
            "description": "Reference to an external bug tracking system ID"
          }
        },
        "additionalProperties": false
      },
      "description": "List of findings or defects identified"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Recommendations based on findings"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "File attachments (screenshots, logs, etc.)"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "testCasesExecuted": {
          "type": "integer",
          "minimum": 0
        },
        "defectsFound": {
          "type": "integer",
          "minimum": 0
        },
        "timeSpentHours": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": true,
      "description": "Key metrics from the testing effort"
    },
    "createdBy": {
      "type": "string",
      "minLength": 1,
      "description": "Creator of the report"
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date the report was generated"
    },
    "author": {
      "type": "string",
      "description": "Author of the test report"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "final", "archived"],
      "description": "Status of the report"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional metadata for the test report"
    }
  },
  "additionalProperties": false
}
