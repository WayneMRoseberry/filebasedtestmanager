{
  "$id": "https://filebasedtestmanager.com/schemas/test-report-schema.json",
  "title": "Test Report Schema",
  "description": "Schema for defining test session reports",
  "type": "object",
  "required": ["id", "projectId", "title", "summary"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^report-\\d+$",
      "description": "Unique report identifier"
    },
    "projectId": {
      "type": "string",
      "pattern": "^proj-\\d+$",
      "description": "Reference to the project"
    },
    "sessionId": {
      "type": "string",
      "pattern": "^session-\\d+$",
      "description": "Reference to the test session"
    },
    "charterId": {
      "type": "string",
      "pattern": "^charter-\\d+$",
      "description": "Reference to the test charter"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Report title"
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000,
      "description": "Report summary"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "severity", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["bug", "issue", "observation", "suggestion"],
            "description": "Type of finding"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"],
            "description": "Severity level"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000,
            "description": "Finding description"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "Steps to reproduce"
          },
          "expectedResult": {
            "type": "string",
            "maxLength": 500,
            "description": "Expected result"
          },
          "actualResult": {
            "type": "string",
            "maxLength": 500,
            "description": "Actual result"
          },
          "impact": {
            "type": "string",
            "maxLength": 500,
            "description": "Impact assessment"
          }
        },
        "additionalProperties": false
      },
      "description": "Findings from the test session"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Recommendations based on findings"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "File attachments (screenshots, logs, etc.)"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "testCasesExecuted": {
          "type": "integer",
          "minimum": 0
        },
        "testCasesPassed": {
          "type": "integer",
          "minimum": 0
        },
        "testCasesFailed": {
          "type": "integer",
          "minimum": 0
        },
        "bugsFound": {
          "type": "integer",
          "minimum": 0
        },
        "sessionDuration": {
          "type": "integer",
          "minimum": 0,
          "description": "Duration in minutes"
        }
      },
      "additionalProperties": false,
      "description": "Session metrics"
    },
    "createdBy": {
      "type": "string",
      "minLength": 1,
      "description": "Creator of the report"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "additionalProperties": false
}
