{
  "$id": "https://filebasedtestmanager.com/schemas/test-strategy-schema.json",
  "title": "Test Strategy Schema",
  "description": "Schema for defining test strategies for projects",
  "type": "object",
  "required": ["id", "projectId", "name", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^strategy-\\d+$",
      "description": "Unique strategy identifier"
    },
    "projectId": {
      "type": "string",
      "pattern": "^proj-\\d+$",
      "description": "Reference to the project this strategy belongs to"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Strategy name"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000,
      "description": "Strategy description"
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Testing objectives"
    },
    "scope": {
      "type": "string",
      "maxLength": 500,
      "description": "Scope of testing"
    },
    "approach": {
      "type": "string",
      "maxLength": 500,
      "description": "Testing approach"
    },
    "deliverables": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Expected deliverables"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Identified risks for the testing effort"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Dependencies for the testing effort"
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Testing assumptions"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Testing constraints"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "approved", "active", "completed"],
      "default": "draft",
      "description": "Strategy status"
    },
    "createdBy": {
      "type": "string",
      "minLength": 1,
      "description": "Creator of the strategy"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "description": "Version of the test strategy (semver)"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Additional metadata for the test strategy"
    }
  },
  "additionalProperties": false
}
