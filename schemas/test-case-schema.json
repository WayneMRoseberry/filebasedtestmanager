{
  "$id": "https://filebasedtestmanager.com/schemas/test-case-schema.json",
  "title": "Test Case Schema",
  "description": "Schema for defining individual test cases",
  "type": "object",
  "required": ["id", "projectId", "name", "steps"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^case-\\d+$",
      "description": "Unique test case identifier"
    },
    "projectId": {
      "type": "string",
      "pattern": "^proj-\\d+$",
      "description": "Reference to the project"
    },
    "charterId": {
      "type": "string",
      "pattern": "^charter-\\d+$",
      "description": "Reference to the test charter"
    },
    "suiteId": {
      "type": "string",
      "pattern": "^suite-\\d+$",
      "description": "Reference to the test suite"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Test case name"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Test case description"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["step", "action", "expected"],
        "properties": {
          "step": {
            "type": "integer",
            "minimum": 1,
            "description": "Step number"
          },
          "action": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500,
            "description": "Action to perform"
          },
          "expected": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500,
            "description": "Expected result"
          },
          "data": {
            "type": "string",
            "maxLength": 200,
            "description": "Test data for this step"
          }
        },
        "additionalProperties": false
      },
      "description": "Test execution steps"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "default": "medium",
      "description": "Test case priority"
    },
    "category": {
      "type": "string",
      "enum": ["functional", "non-functional", "regression", "smoke", "integration", "performance", "security"],
      "default": "functional",
      "description": "Test case category"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Test case tags"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Prerequisites for this test case"
    },
    "testData": {
      "type": "string",
      "maxLength": 500,
      "description": "Required test data"
    },
    "expectedResult": {
      "type": "string",
      "maxLength": 1000,
      "description": "Overall expected result"
    },
    "estimatedDuration": {
      "type": "integer",
      "minimum": 0,
      "description": "Estimated duration in minutes"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "ready", "active", "completed", "deprecated"],
      "default": "draft",
      "description": "Test case status"
    },
    "createdBy": {
      "type": "string",
      "minLength": 1,
      "description": "Creator of the test case"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "additionalProperties": false
}
