{
  "$id": "https://filebasedtestmanager.com/schemas/test-suite-schema.json",
  "title": "Test Suite Schema",
  "description": "Schema for defining test suites within charters",
  "type": "object",
  "required": ["id", "projectId", "name"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^suite-\\d+$",
      "description": "Unique suite identifier"
    },
    "projectId": {
      "type": "string",
      "pattern": "^proj-\\d+$",
      "description": "Reference to the project"
    },
    "charterId": {
      "type": "string",
      "pattern": "^charter-\\d+$",
      "description": "Reference to the test charter"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Suite name"
    },
    "description": {
      "type": "string",
      "maxLength": 1000,
      "description": "Suite description"
    },
    "testCases": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^case-\\d+$"
      },
      "description": "Test case references"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Prerequisites for running the suite"
    },
    "setup": {
      "type": "string",
      "maxLength": 1000,
      "description": "Setup instructions"
    },
    "teardown": {
      "type": "string",
      "maxLength": 1000,
      "description": "Teardown instructions"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "default": "medium",
      "description": "Suite priority"
    },
    "category": {
      "type": "string",
      "enum": ["functional", "non-functional", "regression", "smoke", "integration"],
      "default": "functional",
      "description": "Suite category"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Suite tags"
    },
    "estimatedDuration": {
      "type": "integer",
      "minimum": 0,
      "description": "Estimated duration in minutes"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "ready", "active", "completed", "deprecated"],
      "default": "draft",
      "description": "Suite status"
    },
    "createdBy": {
      "type": "string",
      "minLength": 1,
      "description": "Creator of the suite"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "additionalProperties": false
}
