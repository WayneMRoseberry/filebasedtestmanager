{
  "name": "file-based-test-management-service-desktop",
  "version": "1.0.0",
  "description": "Desktop application for File Based Test Management Service",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:pack": "electron-builder",
    "electron:dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.filebasedtestmanager.app",
    "productName": "File Based Test Manager",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "public/**/*",
      "config/**/*",
      "schemas/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
